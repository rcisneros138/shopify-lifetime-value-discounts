{
  "name": "shopify-lifetime-value-discounts",
  "version": "1.0.0",
  "description": "Dynamic lifetime value-based discounts for Shopify without Plus",
  "scripts": {
    "dev": "shopify app dev",
    "dev:server": "./scripts/dev.sh",
    "build": "remix build",
    "start": "remix-serve build",
    "setup": "npm install && shopify app generate extension",
    "setup:dev": "./scripts/setup-dev.sh",
    "test:data": "node scripts/create-test-data.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "rm -f prisma/dev.db && npx prisma migrate dev",
    "tunnel": "ngrok http 3000",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "clean": "rm -rf build node_modules .cache"
  },
  "dependencies": {
    "@remix-run/node": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "@remix-run/serve": "^2.8.0",
    "@shopify/app": "latest",
    "@shopify/cli": "latest",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-app-remix": "^2.0.0",
    "@shopify/shopify-app-session-storage-prisma": "^2.0.0",
    "@shopify/shopify-api": "^9.0.0",
    "@prisma/client": "^5.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prisma": "^5.8.0",
    "@remix-run/dev": "^2.8.0"
  }
}