# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# App URL - Use your ngrok/tunnel URL for development or production URL for deployment
# Development example: https://abc123.ngrok.io
# Production example: https://your-app.herokuapp.com
SHOPIFY_APP_URL=https://your-tunnel-url.ngrok.io

# Required Shopify API scopes
SCOPES=read_customers,write_customers,read_orders,write_discounts,read_discounts,write_price_rules,read_price_rules

# Database Configuration
DATABASE_URL="file:./dev.db"

# Server Configuration
PORT=3000
HOST=localhost

# Session Storage
SESSION_SECRET=your_session_secret_key_here

# Optional: Shopify Development Store
DEV_STORE_DOMAIN=your-dev-store.myshopify.com

# Environment Configuration
NODE_ENV=development
APP_ENV=local